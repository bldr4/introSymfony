{% extends 'base.html.twig' %}

{% block title %}Liste des posts{% endblock %}

{% block body %}

<div class="container">

{% for post in posts %}
    <h2>{{ post.title}}</h2>
    <h4>Ce post est associé à la catégorie: {{ post.category.title }}</h4>
    <p>{{ post.content }}</p>
    <a href="{{path('app_details', {slug:post.slug} )}}">Voir plus </a>
{% endfor %}


</div>
{% endblock %}
